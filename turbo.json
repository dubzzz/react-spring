{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "public/build/**", "api/**"],
      "dependsOn": ["^build"]
    },
    "test:unit": {
      "inputs": ["packages/**/src/**", "targets/**/src/**"],
      "dependsOn": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
